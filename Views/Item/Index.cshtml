@model List<Carpenter.Models.ProjectItem>

@{
    ViewBag.Title = "Project Details";
    var projectId = ViewBag.ProjectId;
    var projectName = ViewBag.ProjectName;
}

<h2>Project: @projectName</h2>

<a class="btn btn-success mb-3" asp-action="Add" asp-route-projectId="@projectId">Add New Item</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Size (inches)</th>
            <th>Size (mm)</th>
            <th>How to</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Description</td>
                <td>@($"{item.Height_inches} x {item.Width_inches} x {item.Length_inches}")</td>
                <td>@($"{item.Height_mm} x {item.Width_mm} x {item.Length_mm}")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-success" asp-controller="Home" asp-action="HowToBuild" asp-route-itemId="@item.Id">
                        How to Build
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
